<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Tables</title>
</head>
<body>
  <h1>Manage Tables</h1>
  <table border="1">
    <tr>
      <th>Table Number</th>
      <th>Capacity</th>
      <th>Availability</th>
    </tr>
    <% tables.forEach(table => { %>
      <tr>
        <td><%= table.tableNumber %></td>
        <td><%= table.capacity %></td>
        <td><%= table.isAvailable ? 'Available' : 'Booked' %></td>
      </tr>
    <% }); %>
  </table>

  <h2>Add/Update Table</h2>
  <form action="/admin/add-table" method="post">
    <label for="tableNumber">Table Number:</label>
    <input type="number" id="tableNumber" name="tableNumber" required><br>

    <label for="capacity">Capacity:</label>
    <input type="number" id="capacity" name="capacity" required><br>

    <button type="submit">Add/Update Table</button>
  </form>
</body>
</html>
