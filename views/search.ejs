<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <style>
    /* Paste your CSS styles here */
    /* General Styles */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f0f0f0;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }

    /* Card Styles */
    .cards-container {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
    }

    .card {
      width: calc(33.33% - 20px); /* Adjust card width for 3 cards with space between */
      background: #ee4848;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
      overflow: hidden; /* Ensure content doesn't overflow */
    }

    .card-img {
      height: 150px; /* Fixed height for image */
      border-top-left-radius: 8px;
      border-top-right-radius: 8px;
      background-size: cover;
      background-position: center;
    }

    .card-info {
      padding: 20px;
    }

    .card-footer {
      padding: 10px 20px;
      border-top: 1px solid #eee;
      text-align: center;
    }

    /* Text Styles */
    .text-title {
      font-size: 1.2em;
      font-weight: bold;
      margin-bottom: 10px;
    }

    .text-body {
      font-size: 0.9em;
      color: #666;
      margin-bottom: 10px;
    }

    /* Button Styles */
    .card-button {
      display: inline-block;
      padding: 10px 20px;
      background-color: #ffae42;
      color: #ffffff;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    .card-button:hover {
      background-color: #ffca7d;
    }

    /* Responsive Design */
    @media (max-width: 1024px) {
      .card {
        width: calc(50% - 20px); /* Adjust card width for 2 cards with space between */
      }
    }

    @media (max-width: 768px) {
      .card {
        width: calc(100% - 20px); /* Adjust card width for 1 card with space */
      }
    }
  </style>
</head>
<body>
    
  <div class="container">
    <h1>Welcome to the Restaurant Finder</h1>
    
    <form action="/home" method="GET">
      <label for="foodCategory">Select Food Category:</label>
      <select id="foodCategory" name="foodCategory">
        <option value="">All</option>
        <% foodCategories.forEach(category => { %>
          <option value="<%= category %>" <%= category === foodCategory ? 'selected' : '' %>><%= category %></option>
        <% }); %>
      </select>

      <label for="areaCategory">Select Area Category:</label>
      <select id="areaCategory" name="areaCategory">
        <option value="">All</option>
        <% areaCategories.forEach(category => { %>
          <option value="<%= category %>" <%= category === areaCategory ? 'selected' : '' %>><%= category %></option>
        <% }); %>
      </select>

      <button type="submit">Filter</button>
    </form>

    <h2>Restaurants:</h2>
    <div class="cards-container">
      <% restaurants.forEach(restaurant => { %>
        <div class="card">
          <div class="card-img" style="background-image: url('<%= restaurant.image %>');"></div>
          <div class="card-info">
            <h3 class="text-title"><%= restaurant.name %></h3>
            <p class="text-body"><strong>Food Category:</strong> <%= restaurant.foodCategory %></p>
            <p class="text-body"><strong>Area Category:</strong> <%= restaurant.areaCategory %></p>
          </div>
          <div class="card-footer">
            <a href="./order" class="card-button">Book Now</a>
            <!-- Replace /book-now with actual booking link if available -->
             
          </div>
        </div>
      <% }); %>
    </div>
  </div>
  
</body>
</html>